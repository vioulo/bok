{
    "name": "bok",
    "description": "一个简单的网页收集器",
    "version": "0.7",
    "manifest_version": 3,
    "omnibox": { "keyword" : "bok" },
    "options_page": "./pages/options.html",
    "action": {
        "default_popup": "./pages/popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent",
        "bookmarks",
        "storage",
        "unlimitedStorage"
    ],
    "icons": {
        "16": "imgs/icons/32.png",
        "32": "imgs/icons/32.png",
        "48": "imgs/icons/48.png",
        "128": "imgs/icons/128.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "js/jquery-3.3.1.min.js",
                "js/tool.js",
                "js/content.js"
            ],
            "css": ["css/main.css"]
        }
    ]
}